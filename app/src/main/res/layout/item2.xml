<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/fotoRes"
        android:layout_width="500dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/encantol"/>
    <TextView
        android:id="@+id/nombreRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fotoRes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NOMBRE DEL RESTAURANTE"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/direccionRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nombreRes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="DIRECCION RESTAURANTE"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>